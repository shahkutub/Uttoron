<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/linResult"
    android:gravity="center|top"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="উত্তরণ কুইজ"
        android:textColor="#5E5148"
        android:layout_gravity="top"
        android:textSize="@dimen/_15sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/tv_bg"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_20sdp"
            >
            <TextView
                android:id="@+id/tvResult1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#461AB7"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                />

            <TextView
                android:id="@+id/tvResult2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#42BE44"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                />

            <TextView
                android:id="@+id/tvResult3"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ED2027"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#941D2A"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:text="কুইজে অংশ গ্রহণের জন্য আপনাকে ধন্যবাদ"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="ড্যাশবোর্ডে ফেরত যেতে নিচের বাটন ক্লিক করুন"
            android:textSize="@dimen/_10sdp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDashBoard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@drawable/round_green_bg"
            android:text="ড্যাশবোর্ড"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>